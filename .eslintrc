{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
        "eqeqeq": "error",
        "no-var": "off",
        "no-global-assign": "error",
        "prettier/prettier": 2,
        "@typescript-eslint/triple-slash-reference": "off"
    }
  }